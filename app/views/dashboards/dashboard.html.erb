<% provide(:title, '') %>

<div class="table-responsive col-md-6">
  <table class="table table-hover">
    <thead>
      <th>国内売上情報</th>
      <th class="text-right">件数</th>
      <th class="text-right">売上</th>
      <th class="text-right">利潤</th>
      <th class="text-right">利潤率</th>
    </thead>
    <tbody>
    <tr>
      <th>今月</th>
      <td class="text-right"><%=@summary["domestic"]["sold_month_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["domestic"]["sold_month_amount"].to_i) %>円</td>
      <td class="text-right"><%=commas_help(@summary["domestic"]["sold_month_profit"].to_i) %>円</td>
      <td class="text-right"><%=@summary["domestic"]["sold_month_profit_rate"] %>％</td>
    </tr>
    <tr>
      <th>今年</th>
      <td class="text-right"><%=@summary["domestic"]["sold_year_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["domestic"]["sold_year_amount"].to_i) %>円</td>
      <td class="text-right"><%=commas_help(@summary["domestic"]["sold_year_profit"].to_i) %>円</td>
      <td class="text-right"><%=@summary["domestic"]["sold_year_profit_rate"] %>％</td>
    </tr>
    <tr>
      <th>全部</th>
      <td class="text-right"><%=@summary["domestic"]["sold_all_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["domestic"]["sold_all_amount"].to_i) %>円</td>
      <td class="text-right"><%=commas_help(@summary["domestic"]["sold_all_profit"].to_i) %>円</td>
      <td class="text-right"><%=@summary["domestic"]["sold_all_profit_rate"] %>％</td>
    </tr>
    </tbody>
  </table>
</div>

<div class="table-responsive col-md-6">
  <table class="table table-hover">
    <thead>
      <th class="col-md-4">海外売上情報</th>
      <th class="col-md-2 text-right">件数</th>
      <th class="col-md-2 text-right">売上</th>
      <th class="col-md-2 text-right">利潤</th>
      <th class="col-md-2 text-right">利潤率</th>
    </thead>
    <tbody>
    <tr>
      <th>今月</th>
      <td class="text-right"><%=@summary["offshore"]["sold_month_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["offshore"]["sold_month_amount"]) %>元</td>
      <td class="text-right"><%=commas_help(@summary["offshore"]["sold_month_profit"]) %>元</td>
      <td class="text-right"><%=@summary["offshore"]["sold_month_profit_rate"] %>％</td>
    </tr>
    <tr>
      <th>今年</th>
      <td class="text-right"><%=@summary["offshore"]["sold_year_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["offshore"]["sold_year_amount"]) %>元</td>
      <td class="text-right"><%=commas_help(@summary["offshore"]["sold_year_profit"]) %>元</td>
      <td class="text-right"><%=@summary["offshore"]["sold_year_profit_rate"] %>％</td>
    </tr>
    <tr>
      <th>全部</th>
      <td class="text-right"><%=@summary["offshore"]["sold_all_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["offshore"]["sold_all_amount"]) %>元</td>
      <td class="text-right"><%=commas_help(@summary["offshore"]["sold_all_profit"]) %>元</td>
      <td class="text-right"><%=@summary["offshore"]["sold_all_profit_rate"] %>％</td>
    </tr>
    </tbody>
  </table>
</div>

<div class="clearfix"></div>

<div class="table-responsive col-md-6">
  <table class="table table-hover">
    <thead>
      <th class="col-md-4">オークション取引情報</th>
      <th class="col-md-2 text-right">売件数</th>
      <th class="col-md-2 text-right">売総額</th>
      <th class="col-md-2 text-right">買件数</th>
      <th class="col-md-2 text-right">買総額</th>
    </thead>
    <tbody>
    <tr>
      <th>今月</th>
      <td class="text-right"><%=@summary["auction"]["sold_month_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["auction"]["sold_month_amount"]) %>円</td>
      <td class="text-right"><%=@summary["auction"]["bought_month_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["auction"]["bought_month_amount"]) %>円</td>
    </tr>
    <tr>
      <th>今年</th>
      <td class="text-right"><%=@summary["auction"]["sold_year_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["auction"]["sold_year_amount"]) %>円</td>
      <td class="text-right"><%=@summary["auction"]["bought_year_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["auction"]["bought_year_amount"]) %>円</td>
    </tr>
    <tr>
      <th>全部</th>
      <td class="text-right"><%=@summary["auction"]["sold_all_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["auction"]["sold_all_amount"]) %>円</td>
      <td class="text-right"><%=@summary["auction"]["bought_all_cnt"] %></td>
      <td class="text-right"><%=commas_help(@summary["auction"]["bought_all_amount"]) %>円</td>
    </tr>
    </tbody>
  </table>
</div>

<div class="table-responsive col-md-6">
  <table class="table table-hover">
    <thead>
      <th class="col-md-4">カスタム取引情報</th>
      <th class="col-md-2 text-right">オーク数</th>
      <th class="col-md-2 text-right">非オーク数</th>
      <th class="col-md-2 text-right">&nbsp;</th>
      <th class="col-md-2 text-right">&nbsp;</th>
    </thead>
    <tbody>
    <tr>
      <th>今月</th>
      <td class="text-right"><%=@summary["custom"]["auction_month"] %></td>
      <td class="text-right"><%=@summary["custom"]["general_month"] %></td>
      <td class="text-right">&nbsp;</td>
      <td class="text-right">&nbsp;</td>
    </tr>
    <tr>
      <th>今年</th>
      <td class="text-right"><%=@summary["custom"]["auction_year"] %></td>
      <td class="text-right"><%=@summary["custom"]["general_year"] %></td>
      <td class="text-right">&nbsp;</td>
      <td class="text-right">&nbsp;</td>
    </tr>
    <tr>
      <th>全部</th>
      <td class="text-right"><%=@summary["custom"]["auction_all"] %></td>
      <td class="text-right"><%=@summary["custom"]["general_all"] %></td>
      <td class="text-right">&nbsp;</td>
      <td class="text-right">&nbsp;</td>
    </tr>
    </tbody>
  </table>
</div>

<div class="clearfix"></div>

<div class="table-responsive col-md-6">
  <table class="table table-hover">
    <thead>
      <th class="col-md-4">商品情報</th>
      <th class="col-md-2 text-right">国内</th>
      <th class="col-md-2 text-right">海外</th>
      <th class="col-md-4">&nbsp;</th>
    </thead>
    <tbody>
    <tr>
      <th class="col-md-4">未売数</th>
      <td class="col-md-2 text-right"><%= @summary["undeal_product"]["domesitc_unsale_cnt"] %></td>
      <td class="col-md-2 text-right"><%= @summary["undeal_product"]["offshore_unsale_cnt"] %></td>
      <td class="col-md-4">&nbsp;</td>
    </tr>
    <tr>
      <th class="col-md-4">売済数</th>
      <td class="col-md-2 text-right"><%= @summary["undeal_product"]["domesitc_sold_cnt"] %></td>
      <td class="col-md-2 text-right"><%= @summary["undeal_product"]["offshore_sold_cnt"] %></td>
      <td class="col-md-4">&nbsp;</td>
    </tr>
    <tr>
      <th class="col-md-4">発送中品</th>
      <td class="col-md-2 text-right">-</td>
      <td class="col-md-2 text-right"><%= @summary["undeal_product"]["offshore_sending_cnt"] %></td>
      <td class="col-md-4">&nbsp;</td>
    </tr>
    <tr>
      <th class="col-md-4">合計</th>
      <td class="col-md-2 text-right">
        <%= @summary["undeal_product"]["domesitc_unsale_cnt"].to_i + \
            @summary["undeal_product"]["domesitc_sold_cnt"].to_i %>
      </td>
      <td class="col-md-2 text-right">
        <%= @summary["undeal_product"]["offshore_unsale_cnt"].to_i + \
            @summary["undeal_product"]["offshore_sold_cnt"].to_i + \
            @summary["undeal_product"]["offshore_sending_cnt"].to_i %>
      </td>
      <td class="col-md-4">&nbsp;</td>
    </tr>
    </tbody>
  </table>
</div>

<div class="table-responsive col-md-4">
  <table class="table table-hover">
    <thead>
    <tr>
      <th class="col-md-6">未処置オーク情報</th>
      <th class="col-md-3 text-right">数</th>
      <th class="col-md-3">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <th class="col-md-6">区分未登録</th>
      <td class="col-md-3 text-right"><%= @summary["undeal_auction"]["operation_unregist"] %></td>
      <td class="col-md-3">&nbsp;</td>
    </tr>
    <tr>
      <th class="col-md-6">商品未登録</th>
      <td class="col-md-3 text-right"><%= @summary["undeal_auction"]["product_unregist"] %></td>
      <td class="col-md-3">&nbsp;</td>
    </tr>
    <tr>
      <th class="col-md-6">カス未登録</th>
      <td class="col-md-3 text-right"><%= @summary["undeal_auction"]["custom_unregist"] %></td>
      <td class="col-md-3">&nbsp;</td>
    </tr>
    <tr>
      <th class="col-md-6">合計</th>
      <td class="col-md-3 text-right">
        <%= @summary["undeal_auction"]["operation_unregist"].to_i + \
            @summary["undeal_auction"]["product_unregist"].to_i + \
            @summary["undeal_auction"]["custom_unregist"].to_i %>
      </td>
      <td class="col-md-3">&nbsp;</td>
    </tr>
    </tbody>
  </table>
</div>

<div class="table-responsive col-md-2">
  <table class="table table-hover">
    <thead>
    <tr>
      <th colspan="2">未処置カスタム数</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td class="col-md-6 text-right"><%= @summary["undeal_custom"]["product_unregist"] %></td>
      <td class="col-md-6">&nbsp;</td>
    </tr>
    </tbody>
  </table>
</div>
