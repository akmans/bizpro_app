<% provide(:title, '編集,発送方法,マスタ管理') %>
  <div class="title">
    <h4>発送方法編集</h4>
    <div class="new">&nbsp;</div>
  </div>
  <div class="form">
    <%= form_for(@shipmethod) do |f| %>
      <%= render 'error_messages' %>
      
      <div class="formRow">
        <div class="formCell1">ID</div>
        <div class="formCell2"><%= @shipmethod.shipmethod_id %><%= f.hidden_field :shipmethod_id %></div>
      </div>
      
      <div class="formRow">
        <div class="formCell1"><%= f.label :shipmethod_name, '名称' %></div>
        <div class="formCell2"><%= f.text_field :shipmethod_name, class: 'input' %></div>
      </div>
      
      <div class="formRow">
        <%= f.submit "更新", class: "btn btn-primary" %>
        <%= link_to "戻る", shipmethods_path, class: "btn" %>
      </div>
    <% end %>
  </div>
