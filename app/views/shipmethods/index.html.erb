<% provide(:title, '一覧,発送方法,マスタ管理') %>
<h3>発送方法一覧</h3>
<div id="pagination_top">
<%= will_paginate %>
</div>
<div class="row header">
  <div class="col-xs-2 col-md-1">ID</div>
  <div class="col-xs-10 col-md-7">名称</div>
  <!-- Add the extra clearfix for only the required viewport -->
  <div class="clearfix visible-xs-block"></div>
  <div class="col-xs-4 col-md-2">タイプ</div>
  <div class="col-xs-8 col-md-2 text-right">
    <%= link_to "New", new_shipmethod_path, remote: true, class: "btn btn-default" %>
  </div>
</div>
<div class="row" id="shipmethod-form" style="display:none;"></div>
<div id="shipmethods">
<%= render @shipmethods %>
</div>
<div id="pagination_bottom">
  <%= will_paginate %>
</div>
