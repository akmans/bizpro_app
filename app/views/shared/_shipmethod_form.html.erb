<%= form_for(@shipmethod, :html => {:class => "form-horizontal"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :shipmethod_id, 'ID', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <p class="form-control-static">
        <%=  params[:action] == 'new' || params[:action] == 'create' ? '-' : @shipmethod.shipmethod_id %>
      </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :shipmethod_name, '名称', class: "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :shipmethod_name, class: 'form-control' %></div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit "実行", class: "btn btn-primary" %>
      <%= link_to "戻る", shipmethods_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
