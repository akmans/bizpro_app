<%= form_for(@category) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="formRow">
    <div class="formCell1">ID</div>
    <div class="formCell2">
      <%= params[:action] == 'new' || params[:action] == 'create' ? '-' : @category.category_id %>
    </div>
  </div>

  <div class="formRow">
    <div class="formCell1"><%= f.label :category_name, '名称' %></div>
    <div class="formCell2"><%= f.text_field :category_name, class: 'input' %></div>
  </div>

  <div class="formRow">
    <%= f.submit "実行", class: "btn btn-primary" %>
    <%= link_to "戻る", categories_path, class: "btn" %>
  </div>
<% end %>
