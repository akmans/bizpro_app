<%= form_for(@brand, :html => {:class => "form-horizontal"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :brand_id, 'ID', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <p class="form-control-static">
        <%= @brand.brand_id.blank? ? '-' : @brand.brand_id %>
      </p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :brand_name, '名称', class: "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :brand_name, class: 'form-control' %></div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit "実行", class: "btn btn-primary" %>
      <%= link_to "戻る", :back, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
