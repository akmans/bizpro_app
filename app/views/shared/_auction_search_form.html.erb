<%= form_tag("/auctions/search", method: "get", html: {:class => 'form-horizontal'}) do %>
<div class="myform">
  <div class="form-group grid">
    <div class="col-sm-2 header">カテゴリ</div>
    <div class="col-sm-10">
      <%= select_tag(:option, options_for_select(category_hash_help.invert, selected: condition[:category_id] ),
            {:class => 'form-control form-field'}) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 text-right">
      <%= submit_tag("Search",
            {:class => 'btn btn-primary'}) %>
    </div>
  </div>
</div>
<% end %>