<%= form_tag("/auctions", method: "get") do %>
<div class="form-horizontal">
  <div class="form-group grid">
    <div class="col-sm-2 header">カテゴリ</div>
    <div class="col-sm-10">
      <%= select_tag(:category_id, options_for_select(category_hash_help.invert, selected: condition["category_id"] ),
            {:class => 'form-control form-field'}) %>
    </div>
  </div>

  <div class="form-group grid row_last">
    <div class="col-sm-2 header">タイトル</div>
    <div class="col-sm-10">
      <%= text_field_tag(:auction_name , condition["auction_name"],
            {:class => 'form-control form-field'}) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 text-right">
      <%= submit_tag("Search", {:class => 'btn btn-primary'}) %>
    </div>
  </div>
</div>
<% end %>