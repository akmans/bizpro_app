<%= form_for [@brand, @modu], :html => {:class => "form-horizontal"} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :brand_id, 'ID', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <p class="form-control-static">
      <%= @modu.modu_id.blank? ? '-' : @modu.modu_id %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :modu_name, '名称', class: "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :modu_name, class: 'form-control' %></div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit "実行", class: "btn btn-primary" %>
      <%= link_to "戻る", brand_modus_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
