<%= form_tag("/customs/search", method: "post") do %>
<div class="form-horizontal">
  <div class="form-group grid">
    <div class="col-sm-1 header">登録区分</div>
    <div class="col-sm-2">
      <%= select_tag(:product_unregist, options_for_select(undeal_custom_hash_help.invert,
            selected: condition["product_unregist"] ), {:class => 'form-control form-field'}) %>
    </div>
    <div class="col-sm-1 header">オーク品</div>
    <div class="col-sm-2">
      <%= select_tag(:is_auction, options_for_select(is_auction_hash_help.invert,
            selected: condition["is_auction"] ), {:class => 'form-control form-field'}) %>
    </div>
    <div class="col-sm-1 header">カスタム</div>
    <div class="col-sm-5">
      <%= text_field_tag(:custom_name , condition["custom_name"],
            {:class => 'form-control form-field'}) %>
    </div>
  </div>

  <div class="form-group grid row_last">
    <div class="col-sm-1 header">登録日</div>
    <div class="col-sm-8">
      <%= select_tag(:year_s, options_for_select(year_hash_help.invert,
            selected: condition["year_s"] ), {:class => 'form-control form-field select-inline'}) %>
      <%= select_tag(:month_s, options_for_select(month_hash_help.invert,
            selected: condition["month_s"] ), {:class => 'form-control form-field select-inline'}) %>
      〜
      <%= select_tag(:year_e, options_for_select(year_hash_help.invert,
            selected: condition["year_e"] ), {:class => 'form-control form-field select-inline'}) %>
      <%= select_tag(:month_e, options_for_select(month_hash_help.invert,
            selected: condition["month_e"] ), {:class => 'form-control form-field select-inline'}) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 text-right">
      <%= hidden_field_tag 'auction_id', '' %>
      <%= button_tag "Clear", type: 'button', id: "btn-custom-clear", class: "btn btn-default" %>
      <%= submit_tag("Search", {:class => 'btn btn-primary'}) %>
    </div>
  </div>
</div>
<% end %>