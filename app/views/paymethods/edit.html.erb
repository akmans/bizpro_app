<% provide(:title, '編集,支払い方法,マスタ管理') %>
  <div class="title">
    <h4>支払い方法編集</h4>
    <div class="new">&nbsp;</div>
  </div>
  <div class="form">
    <%= form_for(@paymethod) do |f| %>
      <%= render 'error_messages' %>
      
      <div class="formRow">
        <div class="formCell1">ID</div>
        <div class="formCell2"><%= @paymethod.paymethod_id %><%= f.hidden_field :paymethod_id %></div>
      </div>
      
      <div class="formRow">
        <div class="formCell1"><%= f.label :paymethod_name, '名称' %></div>
        <div class="formCell2"><%= f.text_field :paymethod_name, class: 'input' %></div>
      </div>
      
      <div class="formRow">
        <%= f.submit "更新", class: "btn btn-primary" %>
        <%= link_to "戻る", paymethods_path, class: "btn" %>
      </div>
    <% end %>
  </div>
