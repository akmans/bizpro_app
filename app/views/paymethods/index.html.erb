<% provide(:title, '一覧,支払い方法,マスタ管理') %>
<h3>支払い方法一覧</h3>
<div id="pagination_top">
<%= will_paginate %>
</div>
<div class="row header">
  <div class="col-xs-2 col-md-1">ID</div>
  <div class="col-xs-8 col-md-8">名称</div>
  <!-- Add the extra clearfix for only the required viewport -->
  <div class="clearfix visible-xs-block"></div>
  <div class="col-md-3 text-right">
    <%= link_to "新規", new_paymethod_path, remote: true, class: "btn btn-default" %>
  </div>
</div>
<div class="row" id="paymethod-form" style="display:none;"></div>
<div id="paymethods">
<%= render @paymethods %>
</div>
<div id="pagination_bottom">
  <%= will_paginate %>
</div>