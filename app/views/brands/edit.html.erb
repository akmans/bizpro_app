<% provide(:title, '編集,ブランド,マスタ管理') %>
  <div class="title">
    <h4>ブランド編集</h4>
    <div class="new">&nbsp;</div>
  </div>
  <div class="form">
    <%= form_for(@brand) do |f| %>
      <%= render 'error_messages' %>
      
      <div class="formRow">
        <div class="formCell1">ID</div>
        <div class="formCell2"><%= @brand.brand_id %><%= f.hidden_field :brand_id %></div>
      </div>
      
      <div class="formRow">
        <div class="formCell1"><%= f.label :brand_name, '名称' %></div>
        <div class="formCell2"><%= f.text_field :brand_name, class: 'input' %></div>
      </div>
      
      <div class="formRow">
        <%= f.submit "更新", class: "btn btn-primary" %>
        <%= link_to "戻る", brands_path, class: "btn" %>
      </div>
    <% end %>
  </div>
