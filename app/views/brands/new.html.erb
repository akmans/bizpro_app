<% provide(:title, '新規 | ブランド') %>
<div class="content">
  <h4 class="title">ブランド新規</h4>
  <div class="new">&nbsp;</div>
  <div class="form">
    <%= form_for(@brand) do |f| %>
      <%= render 'error_messages' %>
      
      <div class="formRow">
        <div class="formCell1"><%= f.label :brand_name, '名称' %></div>
        <div class="formCell2"><%= f.text_field :brand_name, class: 'input' %></div>
      </div>
      
      <div class="formRow">
        <%= f.submit "新規", class: "btn btn-primary" %>
        <%= link_to "戻る", brands_path, class: "btn" %>
      </div>
    <% end %>
  </div>
</div>