<div class="row">
  <div class="col-xs-2 col-md-1"><%= category.category_id %></div>
  <div class="col-xs-10 col-md-8"><%= category.category_name %></div>
  <!-- Add the extra clearfix for only the required viewport -->
  <div class="clearfix visible-xs-block"></div>
  <div class="col-md-3 text-right">
    <%= link_to "Edi", edit_category_path(category.category_id), remote: true,
                class: "btn btn-default" %>
    <%= link_to "Del", category, method: :delete, data: { confirm: "削除しますか?" }, remote: true,
                class: "btn btn-default" %>
  </div>
</div>