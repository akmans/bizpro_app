<% provide(:title, '一覧,カテゴリー,マスタ管理') %>
<h3>カテゴリー一覧</h3>
<div id="total_entries" class="pull-right line-height-22">総件数：<%= @categories.total_entries %>件</div>
<div id="pagination_top">
<%= will_paginate %>
</div>
<div class="clearfix"></div>
<div class="row header">
  <div class="col-xs-2 col-md-1">ID</div>
  <div class="col-xs-10 col-md-8">名称</div>
  <!-- Add the extra clearfix for only the required viewport -->
  <div class="clearfix visible-xs-block"></div>
  <div class="col-md-3 text-right">
    <%= link_to "New", new_category_path, remote: true, class: "btn btn-default" %>
  </div>
</div>
<div class="row" id="category-form" style="display:none;"></div>
<div id="categories">
<%= render @categories %>
</div>
<div id="pagination_bottom">
<%= will_paginate %>
</div>
