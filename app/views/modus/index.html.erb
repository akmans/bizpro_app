<% provide(:title, '一覧,モデル,マスタ管理') %>
<h3>ブランド > モデル一覧</h3>
<div id="total_entries" class="pull-right line-height-22">総件数：<%= @modus.total_entries %>件</div>
<div id="pagination_top">
  <%= will_paginate %>
</div>
<div class="clearfix"></div>
<div class="row header">
  <div class="col-xs-2 col-md-1">ID</div>
  <div class="col-xs-8 col-md-8">名称</div>
  <!-- Add the extra clearfix for only the required viewport -->
  <div class="clearfix visible-xs-block"></div>
  <div class="col-md-3 text-right">
    <%= link_to "New", new_brand_modu_path, remote: true, class: "btn btn-default" %>
  </div>
</div>
<div class="row" id="modu-form" style="display:none;"></div>
<div id="modus">
<%= render @modus %>
</div>
<div id="pagination_bottom">
  <%= will_paginate %>
</div>

<div class="form-group">
  <div class="col-sm-12 text-right">
    <%= link_to "戻る", :back, class: "btn btn-default" %>
  </div>
</div>