<% provide(:title, '編集 | ' + subtitle('モデル')) %>
<div class="content">
  <div class="title">
    <h4>モデル編集</h4>
    <div class="new">&nbsp;</div>
  </div>
  <div class="form">
    <%= form_for [@brand, @modu] do |f| %>
      <%= render 'error_messages' %>
      
      <div class="formRow">
        <div class="formCell1">ID</div>
        <div class="formCell2"><%= @modu.modu_id %><%= f.hidden_field :modu_id %></div>
      </div>
      
      <div class="formRow">
        <div class="formCell1"><%= f.label :modu_name, '名称' %></div>
        <div class="formCell2"><%= f.text_field :modu_name, class: 'input' %></div>
      </div>
      
      <div class="formRow">
        <%= f.submit "更新", class: "btn btn-primary" %>
        <%= link_to "戻る", brand_modus_path, class: "btn" %>
      </div>
    <% end %>
  </div>
</div>