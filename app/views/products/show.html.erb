<% provide(:title, '表示,商品') %>
<h3>商品表示</h3>
<div class="form-horizontal">
  <div class="form-group grid">
    <div class="col-sm-1 header">ID</div>
    <div class="col-sm-2"><%= @product.product_id %></div>
    <div class="col-sm-1 header">名称</div>
    <div class="col-sm-8"><%= @product.product_name %></div>
  </div>

  <div class="form-group grid">
    <div class="col-sm-1 header">処理区分</div>
    <div class="col-sm-2"><%= is_domestic_name_help(@product.is_domestic) %></div>
    <div class="col-sm-1 header">カテゴリ</div>
    <div class="col-sm-2"><%= category_name_help(@product.category_id) %></div>
    <div class="col-sm-1 header">ブランド</div>
    <div class="col-sm-2"><%= brand_name_help(@product.brand_id) %></div>
    <div class="col-sm-1 header">モデル</div>
    <div class="col-sm-2"><%= modu_name_help(@product.modu_id) %></div>
  </div>

  <div class="form-group grid row_last">
    <div class="col-sm-1 header memo">メモ</div>
    <div class="col-sm-11">
      <%= @product.memo.blank? ? "-" : simple_format(@product.memo, class: 'memo-data') %>
    </div>
  </div>
</div>

<h4>オークションリスト</h4>
<div class="row header">
  <div class="col-xs-2 col-md-1">ID</div>
  <div class="col-xs-10 col-md-11">名称</div>
</div>
<%= render :partial => 'shared/pa_map', :collection => @pa_maps %>

<h4>カスタムリスト</h4>
<div class="row header">
  <div class="col-xs-2 col-md-1">ID</div>
  <div class="col-xs-10 col-md-11">名称</div>
</div>
<%= render :partial => 'shared/pc_map', :collection => @pc_maps %>

<div class="form-group">
  <div class="col-sm-11 col-sm-offset-1">
    <%= link_to "戻る", :back, class: "btn btn-default" %>
  </div>
</div>